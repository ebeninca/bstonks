{
    "name": "Python: Flask",
    "type": "python",
    "request": "launch",
    "module": "flask",
    "env": {
        "FLASK_APP": "${workspaceRoot}/flask_app/app.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0",
        "PYTHONPATH": "${workspaceRoot}"
    },
    "args": [
        "run",
        "--no-debugger",
        "--no-reload"
    ],
    "jinja": true
}